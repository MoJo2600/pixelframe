root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts}]
indent_style = space
indent_size = 2
